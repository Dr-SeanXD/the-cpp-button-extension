{
  "name": "the-c---button",
  "publisher": "Dr-SeanXD",
  "displayName": "The C++ Button",
  "description": "An extension to compile + run multiple C++ and Java files",
  "version": "1.4.3",
  "icon": "assets/Icon.jpeg",
  "engines": {
    "vscode": "^1.94.0"
  },
  "main": "./extension.js",
  "activationEvents": [
    "onCommand:the-c---button.cpp",
    "onCommand:the-c---button.java",
    "onCommand:the-c---button.generate-header"
  ],
  "contributes": {
    "commands": [
      {
        "command": "the-c---button.cpp",
        "title": "ğŸš€ Run C++ ğŸ’»"
      },
      {
        "command": "the-c---button.java",
        "title": "ğŸš€ Run Java ğŸ’»"
      },
      {
        "command": "the-c---button.generate-header",
        "title": "ğŸ“œ Generate Header"
      },
      {
        "command": "the-c---button.python",
        "title": "ğŸš€ Run Python ğŸ"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "The C++ Button Configuration",
      "properties": {
        "the-c++-button.authorName": {
          "type": "string",
          "default": "Enter your name!",
          "description": "The author name to include in header comments."
        },
        "the-c++-button.saveAllBeforeRunJava": {
          "type": "boolean",
          "default": false,
          "description": "Automatically save all files before running the command ğŸš€ Run Java ğŸ’»."
        },
        "the-c++-button.saveAllBeforeRunC++": {
          "type": "boolean",
          "default": false,
          "description": "Automatically save all files before running the command ğŸš€ Run C++ ğŸ’»."
        },
        "the-c++-button.saveAllBeforeRunPython": {
          "type": "boolean",
          "default": false,
          "description": "Automatically save all files before running the command ğŸš€ Run Python ğŸ."
        },
        "the-c++-button.showRunTimeAndMemoryUsage": {
          "type": "boolean",
          "default": true,
          "description": "Show the run time and memory usage after each compilation and run."
        },
        "the-c++-button.clearTerminalBeforeExecution": {
          "type": "boolean",
          "default": false,
          "description": "Clear the terminal for each compilation/execution."
        }
      }
    },
    "menus": {
      "editor/title": [
        {
          "command": "the-c---button.cpp",
          "when": "resourceExtname == .cpp",
          "group": "navigation"
        },
        {
          "command": "the-c---button.java",
          "when": "resourceExtname == .java",
          "group": "navigation"
        },
        {
          "command": "the-c---button.python",
          "when": "resourceExtname == .py",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.94.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.13.0"
  },
  "dependencies": {
  }
}
